<div class="hero-unit">
    
    <form class="form-horizontal" method="GET" action="taxi">
        <div class="row">
            <div class="span5">
                <div class="control-group">
                    <div class="search-box-holder s-on s-on-change">
                        <input type="text" disabled="disabled" id="from" placeholder="Use current location" class="input-block-level" name="From">
                        <button id="change-location" type="button" value="change">Change</button>
                        <div id="find-my-loc"></div>
                    </div>
                </div>
            </div>
            <div class="span5">
                <div class="control-group">
                    <input type="text" id="to" placeholder="To (postcode, street, town etc.)" class="input-block-level" name="To">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="span5">
                <div class="control-group">
                    <div class="btn-holder">
                        <button type="submit" class="btn-fight" id="fight-button"></button>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="fromlat" name="fromlat"/>
        <input type="hidden" id="fromlong" name="fromlong"/>
        <input type="hidden" id="tolat" name="tolat"/>
        <input type="hidden" id="tolong" name="tolong"/>
    </form>
</div>
<div class="arrow-down-bottom">
    <div class="arrow-down-bottom-img"></div>
</div>

<div id="moreinfo">
    <div style=" height:100px;" class="steps-numbers">
        <img style="float:left;" src="/assets/img/circle-1.png" alt="1" />
        <p class="one">Tell us where you are and where you're heading</p>
    </div>
    <div style=" height:100px;"  class="steps-numbers">
        <img style="float:right;" src="/assets/img/circle-2.png" alt="2" />
        <p class="two">    We'll find the average taxi fare calculated based on where you are and where you're heading</p>
    </div>
    <div style=" height:100px;"  class="steps-numbers">
        <img style="float:left;" src="/assets/img/circle-3.png" alt="3" />
        <p class="two">  Choose a local taxi firm from the list and call them up to book! </p>
    </div>
</div>

@section Scripts {
    <!-- Randomly generate pics -->
    <script type="text/javascript" src="/assets/js/location.js"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        var rand_no = Math.floor((13-1)*Math.random()) + 1;
        var className = 'photo-set' + rand_no;
        $("#headerIMG").addClass(className);
    });
    </script>
}

@section MetaTags{
    <meta name="description" content="Find the price and phone number of local taxi firms in your exact area.">
}

@section Title{
    <title>Local Taxi Fare Finder</title>
}